<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </div>
  <div class="field">
    <%= f.label :template_id %><br />
    <select name='template_id'>
      <%@templates.each do|t|%>
        <option value='<%=t.id%>'><%=t.name%></option>
      <%end%>
    </select>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :style => 'width:600px;' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">
  $(function(){
      $("#page_content").wysiwyg();
      })
</script>
